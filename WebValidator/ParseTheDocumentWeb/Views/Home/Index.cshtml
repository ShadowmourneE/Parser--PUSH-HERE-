@{
    ViewData["Title"] = "Home Page";
}
<div class="d-flex instruction">
    <div class="text-center">1. Click 'Choose file' button and upload the file</div> 
    <div class="text-center">2. Click 'Click to validate' and see the results</div>
    <div class="d-flex instruction text-center">
        <div class="text-danger">ERRORS - RED</div>
        <div class="text-warning">WARNINGS - YELLOW</div>
    </div>
</div>
<div class="d-flex justify-content-between">
    <form asp-action="ValidateQualificationFile" asp-controller="Home" data-ajax="true" data-ajax-method="post" enctype="multipart/form-data" data-ajax-complete="onSubmitEventSuccess">
        <input type="file" name="uploadedFile" class="btn" />
        <br>
        <input type="submit" class="btn btn-success" value="Click to validate qualifications" />
    </form>
    <form asp-action="ValidateStandartFile" asp-controller="Home" data-ajax="true" data-ajax-method="post" enctype="multipart/form-data" data-ajax-complete="onSubmitEventSuccess">
        <input type="file" name="uploadedFile" class="btn" />
        <br>
        <input type="submit" class="btn btn-info" value="Click to validate standarts" />
    </form>
</div>


<!--Render errors heere-->
<div id="errors" class="container text-danger"></div>


<!--Render warnings heere-->
<div id="warnings" class="container"></div>